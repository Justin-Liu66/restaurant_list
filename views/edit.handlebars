<form action="/restaurants/{{ restaurant._id }}/edit" method="POST" class="mt-5 ml-5">
  <input type="text" placeholder="name" name="name" value="{{ restaurant.name }}" style="display: block">
  <input type="text" placeholder="name_en" name="name_en" value="{{ restaurant.name_en }}" style="display: block">
  <input type="text" placeholder="category" name="category" value="{{ restaurant.category }}" style="display: block">
  <input type="text" placeholder="image" name="image" value="{{ restaurant.image }}" style="display: block">
  <input type="text" placeholder="location" name="location" value="{{ restaurant.location }}" style="display: block">
  <input type="text" placeholder="phone" name="phone" value="{{ restaurant.phone }}" style="display: block">
  <input type="text" placeholder="google_map" name="google_map" value="{{ restaurant.google_map }}"
    style="display: block">
  <input type="text" placeholder="rating" name="rating" value="{{ restaurant.rating }}" style="display: block">
  <input type="text" placeholder="description" name="description" value="{{ restaurant.description }}"
    style="display: block">
  <div class="mt-3">
    <button type="submit"
      style="border: 1px solid green; border-radius: 10px; color: green; background: white">更新</button>
    <a href="/restaurants/{{ restaurant._id }}"
      style="border: 1px solid green; border-radius: 10px; color: green">返回</a>
  </div>

</form>