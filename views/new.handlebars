<form action="/restaurants" method="POST" class="mt-5 ml-5">
  <div>
    <h5 style="display: inline">餐廳名稱:</h5>
    <input type="text" placeholder="name" name="name" style="display: inline">
  </div>
  <div>
    <h5 style="display: inline">英文名稱:</h5>
    <input type="text" placeholder="name_en" name="name_en" style="display: inline">
  </div>
  <div>
    <h5 style="display: inline">餐廳類型:</h5>
    <input type="text" placeholder="category" name="category" style="display: inline">
  </div>
  <div>
    <h5 style="display: inline">餐廳照片:</h5>
    <input type="text" placeholder="image" name="image" style="display: inline">
  </div>
  <div>
    <h5 style="display: inline">餐廳地址:</h5>
    <input type="text" placeholder="location" name="location" style="display: inline">
  </div>
  <div>
    <h5 style="display: inline">餐廳電話:</h5>
    <input type="text" placeholder="phone" name="phone" style="display: inline">
  </div>
  <div>
    <h5 style="display: inline">餐廳地圖:</h5>
    <input type="text" placeholder="google_map" name="google_map" style="display: inline">
  </div>
  <div>
    <h5 style="display: inline">餐廳得分:</h5>
    <input type="text" placeholder="rating" name="rating" style="display: inline">
  </div>
  <div>
    <h5 style="display: inline">餐廳簡介:</h5>
    <input type="text" placeholder="description" name="description" style="display: inline">
  </div>
  <div class="mt-3">
    <button type="submit"
      style="border: 1px solid green; border-radius: 10px; color: green; background: white">新增</button>
    <a href="/" style="border: 1px solid green; border-radius: 10px; color: green">返回</a>
  </div>
</form>